<%= stylesheet_link_tag 'configuracion_base' %>
<%= stylesheet_link_tag 'portada_vistas' %>



<div class="jumbotron text-white" 
    style="background: linear-gradient(to right, var(--primary-color), rgba(10, 46, 61, 0.5), rgba(10, 46, 61, 0)),
            linear-gradient(to bottom, var(--white-color), rgba(0, 0, 0, 0.01), rgba(10, 46, 61, 0)),
            url('<%= asset_path('home/portada.JPG') %>'); 
            background-size: cover; 
            background-position: center 40%; /* Ajusta la posición vertical de la imagen */ 
            background-repeat: no-repeat; 
            position: relative;">
  <!-- Contenido del jumbotron -->
  <div class="col-md-6 px-0" 
       style="position: relative; z-index: 2; top: 20%; transform: translateY(0%); text-align: left;">
    <h1 class="font-din-condensed-wide" style="margin-top: 6.5rem; font-size: 4rem;">Gran Fondo Puchuncaví</h1>
    <p class="font-din-condensed" style="margin-top: 0rem; font-size: 1.5rem; color: var(--tertiary-color)">Un evento que desafiara tus limites</p>
  </div>
</div>

<div class='container' style='margin-top: 2rem;'></div>

<div class="container marketing">

  <!-- Row for circles -->
  <div class="row d-flex justify-content-center text-center">
    <div class="d-flex justify-content-center" style="gap: 30%;">
      <!-- Circle with background image -->
      <div class="circle-container" style="position: relative; width: 140px; height: 140px;">
        <div style="background-image: url('<%= asset_path('home/portada.JPG') %>'); 
                    background-size: cover; 
                    background-position: center; 
                    position: absolute; 
                    top: 0; 
                    left: 0; 
                    width: 100%; 
                    height: 100%; 
                    border-radius: 50%; 
                    z-index: 1;"></div>
        <img class="rounded-circle" width="140" height="140" style="z-index: 2; position: relative;">
      </div>

      <!-- Circle with background image -->
      <div class="circle-container" style="position: relative; width: 140px; height: 140px;">
        <div style="background-image: url('<%= asset_path('home/portada.JPG') %>'); 
                    background-size: cover; 
                    background-position: center; 
                    position: absolute; 
                    top: 0; 
                    left: 0; 
                    width: 100%; 
                    height: 100%; 
                    border-radius: 50%; 
                    z-index: 1;"></div>
        <img class="rounded-circle" width="140" height="140" style="z-index: 2; position: relative;">
      </div>
    </div>
  </div>

  <!-- Single text centered below -->
  <div class="row text-center mt-4">
    <div class="col-12">
      <p class="font-din-condensed" style="color: var(--primary-color);">Aqui hablar un poco de como sera la carrera, poner imagen de kilometraje y altimetria</p>
    </div>
  </div>

</div><!-- /.container -->

<div style="position: relative; background-color: rgba(10, 46, 61, 0.9); width: 300px; height: 300px; border-radius: 10px;">
  <!-- Imagen encima -->
  <img src="<%= asset_path('home/GANADOR.png') %>" alt="Imagen encima" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 150px; height: 150px; object-fit: cover; border-radius: 50%;">
</div>

