<%= stylesheet_link_tag 'configuracion_base' %>
<%= stylesheet_link_tag 'jumbotron' %>
<%= stylesheet_link_tag 'home/portada' %>
<%= stylesheet_link_tag 'circulos' %>

<div class="jumbotron text-white" 
    style="background: linear-gradient(to right, var(--primary-color), rgba(10, 46, 61, 0.65), rgba(10, 46, 61, 0)),
            linear-gradient(to bottom, var(--white-color), rgba(0, 0, 0, 0.01), rgba(10, 46, 61, 0)),
            url('<%= asset_path('home/portada.JPG') %>'); 
            background-size: cover; 
            background-position: center 40%; /* Ajusta la posición vertical de la imagen */ 
            background-repeat: no-repeat; 
            position: relative;">
  
  <!-- Logo superpuesto -->
  <div class="logo-container">
    <img src="<%= asset_path('logo.png') %>" alt="Logo" class="logo">
  </div>

  <!-- Contenido del jumbotron -->
  <div class="content-container">
    <!-- Texto del evento -->
    <div class="col-md-6 px-0 text-start">
      <h1 class="font-din-condensed-small-caps title" style="color: var(--white-color)">gran fondo puchuncaví</h1>
      <p class="font-din-condensed subtitle" style="color: var(--tertiary-color)">Un evento que desafiara tus limites</p>
      <!-- Botón de inscripción -->
      <a href="#inscribirse" class="btn btn-register" style="background-color: var(--white-color)">Inscribirse</a>
    </div>
  </div>
</div>

<div class='container' style='margin-top: 2rem;'></div>

<div class="container marketing">

  <!-- Row for circles -->
  <div class="row d-flex justify-content-center text-center">
    <div class="d-flex justify-content-center gap-md-5 gap-3">
      <!-- Circle with background image -->
      <div class="circle-container">
        <div class="circle-background" style="background-image: url('<%= asset_path('home/portada.JPG') %>');"></div>
        <img class="rounded-circle" width="140" height="140">
      </div>

      <!-- Circle with background image -->
      <div class="circle-container">
        <div class="circle-background" style="background-image: url('<%= asset_path('home/portada.JPG') %>');"></div>
        <img class="rounded-circle" width="140" height="140">
      </div>
    </div>
  </div>

  <!-- Single text centered below -->
  <div class="row text-center mt-4">
    <div class="col-12">
      <p class="font-din-condensed description">Aqui hablar un poco de como sera la carrera, poner imagen de kilometraje y altimetria</p>
    </div>
  </div>
</div>

