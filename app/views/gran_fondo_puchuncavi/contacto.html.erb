<%= stylesheet_link_tag 'configuracion_base' %>
<%= stylesheet_link_tag 'jumbotron' %>
<%= stylesheet_link_tag 'nuestra_historia/portada' %>
<%= stylesheet_link_tag 'circulos' %>
<%= stylesheet_link_tag 'contacto/form'%>

<div class="container mt-5">

  <div class="row mt-4">
    <!-- Contenedor con imagen de fondo -->
    <div class="col-md-4 d-none d-md-block">
      <div class="image-container" style="background-image: url('<%= asset_path("home/portada.JPG") %>');"></div>
    </div>

    <!-- Formulario -->
    <div class="col-md-8">
      <div class="card p-4 shadow" style="border-radius: 10px; height: 100%;">
        <%= form_with(model: @comment, url: comments_path, local: true) do |form| %>
          <!-- Nombre -->
          <div class="mb-3">
            <%= form.label :name, "Nombre", class: "form-label font-din-condensed" %>
            <%= form.text_field :name, class: "form-control", placeholder: "Tu nombre", required: true %>
          </div>

          <!-- Correo -->
          <div class="mb-3">
            <%= form.label :mail, "Correo Electrónico", class: "form-label font-din-condensed" %>
            <%= form.email_field :mail, class: "form-control", placeholder: "Tu correo electrónico", required: true %>
          </div>

          <!-- Comentario -->
          <div class="mb-3">
            <%= form.label :comment, "Comentario", class: "form-label font-din-condensed" %>
            <%= form.text_area :comment, class: "form-control", rows: 5, placeholder: "Escribe tu comentario aquí", required: true %>
          </div>

          <!-- Botón enviar -->
          <div class="text-center">
            <%= form.submit "Enviar Comentario", class: "btn btn-primary font-din-condensed" %>
          </div>
        <% end %>
      </div>

      <!-- Mensajes flash -->
      <% if flash[:notice] %>
        <p class="mt-3 text-center text-success font-din-condensed"><%= flash[:notice] %></p>
      <% elsif flash[:alert] %>
        <p class="mt-3 text-center text-danger font-din-condensed"><%= flash[:alert] %></p>
      <% end %>
    </div>
  </div>
</div>
