<script>
  // Inicialización del mapa
  function initMap() {
    // Coordenadas del Estadio Municipal de Puchuncaví
    const estadioPuchuncavi = { lat: -32.728377, lng: -71.410907 };

    // Crear el mapa centrado en el Estadio Municipal de Puchuncaví
    const map = new google.maps.Map(document.getElementById('map'), {
      center: estadioPuchuncavi,
      zoom: 15,
    });

    // Agregar un marcador para el Estadio Municipal de Puchuncaví
    const marker = new google.maps.Marker({
      position: estadioPuchuncavi,
      map: map,
      title: "Estadio Municipal de Puchuncaví",
    });

    // Información adicional en el marcador
    const infoWindow = new google.maps.InfoWindow({
      content: "<h4>Estadio Municipal de Puchuncaví</h4><p>Lugar de inicio y término de la carrera.</p>",
    });

    // Mostrar información al hacer clic en el marcador
    marker.addListener("click", () => {
      infoWindow.open(map, marker);
    });

    // Cargar el archivo KMZ si es necesario (opcional)
    const kmzLayer = new google.maps.KmlLayer({
      url: 'https://developers.google.com/maps/documentation/javascript/examples/kml/westcampus.kml',
      map: map,
      preserveViewport: true,
    });

    // Manejo de errores al cargar el archivo KMZ
    kmzLayer.addListener('status_changed', () => {
      if (kmzLayer.getStatus() !== google.maps.KmlLayerStatus.OK) {
        console.error('Error al cargar el archivo KMZ:', kmzLayer.getStatus());
      }
    });
  }

  // Llamar a la inicialización cuando la página esté cargada
  window.onload = initMap;
</script>
